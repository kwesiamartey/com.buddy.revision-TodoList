<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGreyLight"
        android:orientation="vertical" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center|bottom"
            android:orientation="vertical">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_launcher"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:gravity="center"
                android:textSize="24dp"
                android:layout_marginTop="20dp"
                android:editable="false"
                android:textStyle="bold"
                android:textColor="@color/colorPurple"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|top"
            android:padding="28dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:editable="false"
                android:textStyle="bold"
                android:textColor="@color/colorPurple"/>
            <EditText
                android:id="@+id/txt_signin_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:drawableRight="@drawable/ic__email"
                android:backgroundTint="@color/colorPurple"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:editable="false"
                android:textStyle="bold"
                android:textColor="@color/colorPurple"/>
            <EditText
                android:id="@+id/txt_signin_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:drawableRight="@drawable/ic_security"
                android:backgroundTint="@color/colorPurple"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="By clicking Sign In, you agree to our Terms and Conditions"
                android:textColor="@color/color_black"
                android:textSize="12dp" />
            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher"
                android:text="Login"
                android:textColor="@color/colorWhite"
                android:background="@color/colorPurple"
                android:textSize="18dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/btn_sign_up_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="CREATE AN ACCOUNT?"
                    android:textColor="@color/colorPurple"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/btn_forgot_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="FORGOT PASSWORD"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/colorOrangeColor"
                    android:textSize="16dp"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</FrameLayout>