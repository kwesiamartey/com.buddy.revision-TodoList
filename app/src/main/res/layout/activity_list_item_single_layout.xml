<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="2dp"
    android:paddingBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:padding="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/i_shape"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:padding="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_radio_button"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:text="Tomotoes, Onion,Pepper, Okrao"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/list_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:text="Tomotoes, Onion,Pepper, Okrao"
                android:textColor="@color/colordeepGrey" />

            <TextView
                android:id="@+id/list_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Date"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorLightBlue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <TextView
                android:id="@+id/list_items_menu_ellipse"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|top"
                android:drawableTop="@drawable/ic_menu"/>

            <TextView
                android:id="@+id/chk_box"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:drawableRight="@drawable/ic_radio_button_unchecked"
                 />
            <TextView
                android:id="@+id/radio_status_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/color_green"
                android:textStyle="italic"
                android:drawableRight="@drawable/ic_check_circle"
                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_alarm_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:drawableRight="@drawable/ic_add_alarm" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/status_completed1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="completed "
                android:textStyle="italic"
                android:textColor="@color/color_green"
                android:drawableRight="@drawable/ic_check_circle"
                />
            <TextView
                android:id="@+id/status_pending1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pending "
                android:visibility="visible"
                android:textStyle="italic"
                android:textColor="@color/colorPurple"
                android:drawableRight="@drawable/ic_schedule" />
            <TextView
                android:id="@+id/status_canceled1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="canceled "
                android:visibility="gone"
                android:textStyle="italic"
                android:textColor="@color/colorOrangeColor"
                android:drawableRight="@drawable/ic_cancel" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>