<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/form_background_shape"
    android:padding="18dp">

    <TextView
        android:id="@+id/s_date"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="@string/sort_by_date"
        android:drawableLeft="@drawable/ic_list_item"
        android:drawablePadding="12dp"
        android:padding="12dp"
        android:textStyle="normal"
        android:textColor="@color/colordeepGrey"
        android:textSize="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGreyLight"/>

    <TextView
        android:id="@+id/s_myOrder"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="@string/sort_by_my_myorder"
        android:drawableLeft="@drawable/ic_list_item"
        android:drawablePadding="12dp"
        android:padding="12dp"
        android:textStyle="normal"
        android:textColor="@color/colordeepGrey"
        android:textSize="18dp"/>

</LinearLayout>