<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:orientation="vertical"
    android:background="@drawable/all_curved_shape"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/m_menu_title"
        android:layout_width="match_parent"
        android:textSize="18dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPurple"
        android:textStyle="normal"
        android:text="Item Menu"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGreyLight"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/txt_completed_an_item"
        android:layout_width="match_parent"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textStyle="normal|bold"
        android:background="@color/colorGreyLight"
        android:fontFamily="sans-serif"
        android:text="Completed"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGreyLight"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/txt_update_an_item"
        android:layout_width="match_parent"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="10dp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif"
        android:text="Update"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGreyLight"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/txt_remove_an_item"
        android:layout_width="match_parent"
        android:textSize="15dp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif"
        android:background="@color/colorGreyLight"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Remove"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGreyLight"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/txt_cancel_an_item"
        android:layout_width="match_parent"
        android:textSize="15dp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif"
        android:background="@color/colorWhite"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Cancel"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGreyLight"
        android:padding="5dp"/>


</LinearLayout>